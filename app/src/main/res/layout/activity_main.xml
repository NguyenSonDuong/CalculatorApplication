<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="3dp"
    android:screenOrientation="portrait"
    android:weightSum="20"
    tools:context=".MainActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#F5F5F5"
        android:fontFamily="@font/font"
        android:gravity="left"
        android:padding="10dp"
        android:focusable="false"
        android:textColor="#1A1A1A"
        android:textSize="30dp"
        android:id="@+id/edtBieuThuc"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical|right"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:padding="7dp"
        android:textSize="40dp"
        android:text="0"
        android:fontFamily="@font/font"
        android:id="@+id/edtKetQua"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:weightSum="5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius3"
                android:src="@drawable/ic_backspace_black_24dp"
                android:id="@+id/btnAC"
                android:textSize="20sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius3"
                android:text="%"
                android:textColor="#FFF"
                android:id="@+id/btnPhanTram"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:id="@+id/btnAmDuong"
                android:background="@drawable/radius3"
                android:text="+/-"
                android:textColor="#FFF"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:id="@+id/btnMoNgoac"
                android:textColor="#FFF"
                android:background="@drawable/radius2"
                android:text="("
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textColor="#FFF"
                android:background="@drawable/radius2"
                android:text=")"
                android:id="@+id/btnDongNgoac"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:text="1"
                android:textColor="#FFF"
                android:id="@+id/btn1"
                android:textSize="20sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:text="2"
                android:textColor="#FFF"
                android:id="@+id/btn2"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:textColor="#FFF"
                android:text="3"
                android:id="@+id/btn3"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="3dp"
                android:background="@drawable/radius2"
                android:text="+"
                android:textColor="#FFF"
                android:id="@+id/btnCong"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:textColor="#FFF"
                android:text="4"
                android:id="@+id/btn4"
                android:textSize="20sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:textColor="#FFF"
                android:text="5"
                android:id="@+id/btn5"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:textColor="#FFF"
                android:text="6"
                android:id="@+id/btn6"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="3dp"
                android:background="@drawable/radius2"
                android:text="-"
                android:textColor="#FFF"
                android:id="@+id/btnTru"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:textColor="#FFF"
                android:text="7"
                android:id="@+id/btn7"
                android:textSize="20sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:textColor="#FFF"
                android:text="8"
                android:id="@+id/btn8"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:textColor="#FFF"
                android:text="9"
                android:id="@+id/btn9"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="3dp"
                android:background="@drawable/radius2"
                android:text="x"
                android:textColor="#FFF"
                android:id="@+id/btnNhan"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius"
                android:textColor="#FFF"
                android:text="."
                android:id="@+id/btnPhay"
                android:textSize="20sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius1"
                android:textColor="#FFF"
                android:text="0"
                android:id="@+id/btn0"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/radius"
                android:textColor="#FFF"
                android:text="="
                android:id="@+id/btnBang"
                android:textSize="20sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="3dp"
                android:background="@drawable/radius2"
                android:text="/"
                android:textColor="#FFF"
                android:id="@+id/btnChia"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>